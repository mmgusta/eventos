@model FastTickets.Models.CadastroEventoModel

@{
    ViewBag.Title = "Editar";
}


<div class="container">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Editar Evento</legend>

            @Html.HiddenFor(model => model.EventoId)

            <div class="editor-label">
                @Html.LabelFor(model => model.Nome)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Data)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Data)
                @Html.ValidationMessageFor(model => model.Data)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.LocalId)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.LocalId)
                @Html.ValidationMessageFor(model => model.LocalId)
            </div>

            <p>
                <br />
                <input type="submit" class="btn"value="Alterar" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Voltar a Home", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
