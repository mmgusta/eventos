@model FastTickets.Models.LocalEventoModel

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Cadastro de Local do Evento</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Endereco)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Endereco)
            @Html.ValidationMessageFor(model => model.Endereco)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Capacidade)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capacidade)
            @Html.ValidationMessageFor(model => model.Capacidade)
        </div>

       

        <p>
            <br />
            <input type="submit" value="Cadastrar" class="btn"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar aos Eventos", "Index", "Evento")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

